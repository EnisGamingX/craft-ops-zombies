{
    "hud_title_text": {
        "type": "panel",
        "size": [
            "100%cm",
            "100%c"
        ],
        "anchor_from": "bottom_right",
        "anchor_to": "bottom_right",
        "offset": [
            -15,
            -15
        ],
        "alpha": 0.5,
        "controls": [
            {
                "sidebar": {
                    "type": "panel",
                    "size": [
                        "100%c",
                        "100%c"
                    ],
                    "offset": [
                        0,
                        0
                    ]
                }
            },
            {
                "title_background": {
                    "type": "image",
                    "alpha": 0.0,
                    "size": [
                        "100%cm",
                        "100%c"
                    ],
                    "anchor_from": "top_right",
                    "anchor_to": "top_right",
                    "texture": "textures/ui/hud_tip_text_background",
                    "controls": [
                        {
                            "title": {
                                "type": "label",
                                "text": "$title_text",
                                "anchor_from": "center",
                                "anchor_to": "center",
                                "color": "$tool_tip_text",
                                "text_alignment": "left",
                                "layer": 1,
                                "localize": false,
                                "font_size": "medium",
                                "alpha": 2.0
                            }
                        }
                    ]
                }
            }
        ]
    },
    "hud_actionbar_text": {
		"type": "image",
		"size": [
			"100%c + 12px",
			"100%c + 5px"
		],
		"anchor_from": "bottom_left",
		"anchor_to": "bottom_left",
		"offset": [
			5,
			-10
		],
		"texture": "textures/ui/hud_tip_text_background",
		"alpha": 0.0,
		"controls": [
			{
				"actionbar_message": {
					"type": "label",
					"anchor_from": "top_left",
					"anchor_to": "top_left",
					"color": "$tool_tip_text",
					"layer": 1,
					"text": "$actionbar_text",
					"localize": false,
					"text_alignment": "right",
					"alpha": 2
				}
			}
		]
	}
}