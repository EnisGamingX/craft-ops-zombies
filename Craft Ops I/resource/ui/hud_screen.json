{
    "namespace": "hud",
    "hud_actionbar_text": {
        "$tl|default": 40, "$tr|default": 40,
        "$bl|default": 80, "$br|default": 400,
        "$cm|default": 200,
        //
        "$c_tl|default": "%.$tls", "$c_tr|default": "%.($tl + $tr)s",
        "$c_bl|default": "%.($tl + $tr + $bl)s", "$c_br|default": "%.($tl + $tr + $bl + $br)s",
        "$c_c|default": "%.($tl + $tr + $bl + $br + $cm)s",
        //
        "$actionbar|default": "$actionbar_text",
        //
        "$top_left|default": "($c_tl * $actionbar)",
        "$top_right|default": "($c_tr * $actionbar) - ($c_tl * $actionbar) - ($actionbar - $c_tr * $actionbar))",
        "$bottom_right|default": "(($c_bl * $actionbar) - ($c_tr * $actionbar) - ($actionbar - $c_bl * $actionbar))",
        "$bottom_left|default": "(($c_br * $actionbar) - ($c_bl * $actionbar) - ($actionbar - $c_br * $actionbar))",
        //
        "$center|default": "(($c_c * $actionbar) - ($c_br * $actionbar) - ($actionbar - $c_c * $actionbar))",
        "$rest|default": "(($actionbar) - ($c_c * $actionbar))",
        //
        "texture": "textures/ui/blank",
        "anchor_from": "center",
        "anchor_to": "center",
        "size": [
            "100%",
            "100%"
        ],
        "offset": [
            0,
            0
        ],
        "controls": [
            {
                "actionbar_text": {
                    "type": "panel",
                    "anchor_from": "center",
                    "anchor_to": "center",
                    "size": [
                        "100%",
                        "100%"
                    ],
                    "offset": [
                        0,
                        0
                    ],
                    "controls": [
                        {
                            "actionbar_message_top_left_1": {
                                "type": "image",
                                "texture": "textures/ui/blank",
                                "size": [
                                    "100%c + 12px",
                                    "100%c + 5px"
                                ],
                                "alpha": 0.5,
                                "anchor_from": "top_left",
                                "anchor_to": "top_left",
                                "layer": 2,
                                "controls": [
                                    {
                                        "actionbar_message": {
                                            "type": "label",
                                            "localize": false,
                                            "color": "$tool_tip_text",
                                            "text_alignment": "left",
                                            "text": "$top_left" // 1
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "actionbar_message_top_right_2": {
                                "type": "image",
                                "texture": "textures/ui/blank",
                                "size": [
                                    "100%c + 12px",
                                    "100%c + 5px"
                                ],
                                "alpha": 0.5,
                                "anchor_from": "top_right",
                                "anchor_to": "top_right",
                                "layer": 2,
                                "controls": [
                                    {
                                        "actionbar_message": {
                                            "type": "label",
                                            "localize": false,
                                            "color": "$tool_tip_text",
                                            "text_alignment": "right",
                                            "text": "$top_right" // 2
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "actionbar_message_bottom_left_3": {
                                "type": "image",
                                "texture": "textures/ui/blank",
                                "size": [
                                    "100%c + 12px",
                                    "100%c + 5px"
                                ],
                                "alpha": 0.5,
                                "anchor_from": "bottom_left",
                                "anchor_to": "bottom_left",
                                "layer": 2,
                                "controls": [
                                    {
                                        "actionbar_message": {
                                            "type": "label",
                                            "localize": false,
                                            "color": "$tool_tip_text",
                                            "text_alignment": "left",
                                            "text": "$bottom_left" // 3
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "actionbar_message_bottom_right_4": {
                                "type": "image",
                                "texture": "textures/ui/blank",
                                "size": [
                                    "100%c + 12px",
                                    "100%c + 5px"
                                ],
                                "alpha": 0.5,
                                "anchor_from": "bottom_right",
                                "anchor_to": "bottom_right",
                                "layer": 2,
                                "controls": [
                                    {
                                        "actionbar_message": {
                                            "type": "label",
                                            "localize": false,
                                            "color": "$tool_tip_text",
                                            "text_alignment": "right",
                                            "text": "$bottom_right" // 4
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "actionbar_message_center_5": {
                                "type": "image",
                                "texture": "textures/ui/hud_tip_text_background",
                                "size": [
                                    "100%c + 12px",
                                    "100%c + 5px"
                                ],
                                "offset": [
                                    0,
                                    "50%"
                                ],
                                "alpha": 0.5,
                                "anchor_from": "center",
                                "anchor_to": "center",
                                "layer": 2,
                                "controls": [
                                    {
                                        "actionbar_message": {
                                            "type": "label",
                                            "localize": false,
                                            "color": "$tool_tip_text",
                                            "text_alignment": "right",
                                            "text": "$center" // 5
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "actionbar_message_default_6": {
                                "type": "image",
                                "texture": "textures/ui/hud_tip_text_background",
                                "size": [
                                    "100%c + 12px",
                                    "100%c + 5px"
                                ],
                                "offset": [
                                    0,
                                    "50%-68px"
                                ],
                                "alpha": 0.5,
                                "anchor_from": "center",
                                "anchor_to": "center",
                                "layer": 2,
                                "controls": [
                                    {
                                        "actionbar_message": {
                                            "type": "label",
                                            "localize": false,
                                            "color": "$tool_tip_text",
                                            "text_alignment": "right",
                                            "text": "$rest" // 6
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    }
}