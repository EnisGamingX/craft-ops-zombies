{
    "namespace": "hud",
    "hud_actionbar_text": {
        "texture": "textures/ui/blank",
        "$points|default": 370, // for max 8 players
        "$actionbar|default": "$actionbar_text",
        "anchor_from": "center",
        "anchor_to": "center",
        "size": [
            "100%",
            "100%"
        ],
        "offset": [
            0,
            0
        ],
        "controls": [
            {
                "points": {
                    "type": "image",
                    "texture": "textures/ui/blank",
                    "size": [
                        "100%c + 12px",
                        "100%c + 5px"
                    ],
                    "alpha": 0.5,
                    "anchor_from": "bottom_right",
                    "anchor_to": "bottom_right",
                    "layer": 2,
                    "controls": [
                        {
                            "actionbar_message": {
                                "type": "label",
                                "localize": false,
                                "color": "$tool_tip_text",
                                "text_alignment": "left",
                                "text": "(%.($points)s * $actionbar)"
                            }
                        }
                    ]
                }
            },
            {
                "actionbar_message": {
                    "type": "image",
                    "texture": "textures/ui/hud_tip_text_background",
                    "size": [
                        "100%c + 12px",
                        "100%c + 5px"
                    ],
                    "offset": [
                        0,
                        "50%-68px"
                    ],
                    "alpha": 0.5,
                    "anchor_from": "center",
                    "anchor_to": "center",
                    "layer": 2,
                    "controls": [
                        {
                            "actionbar_message": {
                                "type": "label",
                                "localize": false,
                                "color": "$tool_tip_text",
                                "text_alignment": "center",
                                "text": "(($actionbar) - (%.($points)s * $actionbar)"
                            }
                        }
                    ]
                }
            }
        ]
    },
    "hud_title_text": {
        "type": "stack_panel",
        "anchor_from": "center",
        "anchor_to": "center",
        "size": [
            "100%",
            "100%"
        ],
        "alpha": 1,
        "propagate_alpha": false,
        "offset": [
            0,
            0
        ],
        "bindings": [
            {
                "binding_name": "#hud_title_text_string",
                "binding_name_override": "#text",
                "binding_type": "global"
            }
        ],
        "controls": [
            {
                "testser@hud.hud_title": {}
            }
        ]
    },
